<% provide :title, t(:edit_user) %>
<div class=" col-md-6 col-md-offset-3 dn-front-group">
  <h1><%= t :update_profile %></h1>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for [@user, @profile] do |f| %>
        <%= image_tag @profile.avatar.url, size: Settings.size %>
        <%= f.label :avatar %>
        <span class="picture">
          <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png",
            class: "btn btn-default" %>
        </span>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control dn-form-control" %>

        <%= f.submit t(:save_change), class: "btn btn-primary dn-front-user-btn" %>
      <% end %>
    </div>
  </div>
</div>
