<header class="navbar navbar-fixed-top navbar-inverse dn-front-header">
  <div class="container">
    <%= link_to t(:daily_report), root_path, id: "logo" %>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" 
        data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" 
        aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse dropdown" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li ><%= link_to t(:home), root_path %></li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="hidden-xs"><%= current_user.email %></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), user_path(current_user) %></li>
              <li><%= link_to t(:setting),
                edit_user_profile_path(current_user, current_user.profile) %></li>
              <li><%= link_to t(:users), "#" %></li>
              <li><%= link_to t(:change_password),
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(:logout), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:login), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
